<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="travelingViajes.MainPage" BackgroundColor="#f4f4f4">
    <StackLayout Padding="10" Spacing="20" VerticalOptions="Center">
        <Label Text="Bienvenido a TravelingViajes" TextColor="#333333" HorizontalOptions="Center" FontSize="24" FontAttributes="Bold"></Label>
        <Frame CornerRadius="10" BackgroundColor="#ffffff" HasShadow="True">
            <Image Source="vuelo1.png" Aspect="AspectFit" HeightRequest="250" ></Image>
        </Frame>
        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Spacing="10">
            <Button Text="Iniciar Sesión como usuario" x:Name="btnUser" Clicked="btnUser_Clicked" BackgroundColor="#4CAF50" TextColor="#ffffff" CornerRadius="20"></Button>
            <Button Text="Iniciar Sesión como Administrador" x:Name="btnAdmin" Clicked="btnAdmin_Clicked" BackgroundColor="#2196F3" TextColor="#ffffff" CornerRadius="20"></Button>
        </StackLayout>
    </StackLayout>

</ContentPage>

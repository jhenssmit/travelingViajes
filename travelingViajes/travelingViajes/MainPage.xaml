<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="travelingViajes.MainPage">

    <StackLayout Padding="10" >
        <Frame BackgroundColor="Blue">
            <Label Text="Bienvenido a TravelingsViajes" TextColor="White" HorizontalOptions="Center"></Label>
        </Frame>
        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
            <Button Text="Iniciar Sesión como usuario" x:Name="btnUser" 
                Clicked="btnUser_Clicked" 
                BackgroundColor="Aquamarine"></Button>
            <Button Text="Iniciar Sesión como Administrador" x:Name="btnAdmin" 
               Clicked="btnAdmin_Clicked"
                BackgroundColor="Aqua"></Button>
        </StackLayout>
    </StackLayout>

</ContentPage>
